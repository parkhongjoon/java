package sec05;

public class Student {
	//필드 - 객체의 데이터가 저장되는 곳
	int age = 19;
	String name = "철수";
	int grade = 4;
	
	//생성자 - 클레스 명과 같다. ex) Student(){} 둘다 가능 / 기본적으로 생성 , 객체 생성 시 초기화 역활
	
	//메소드 - 객체의 동작으로 호출시 실행되는 곳
	public void study() {
		System.out.println("수업시간에는 공부를 열심히 합니다.");
	}
	public void home() {
		System.out.println("수업이 끝나면 집에 갑니다.");
	}
}
